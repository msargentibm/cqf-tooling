<CDSHooksTestScript>
    <id>opioid-cds-recommendation-11-patient-view</id>
    <enabled>false</enabled>
    <fhirVersion>DSTU3</fhirVersion>
    <description>Avoid prescribing opioid pain medication and benzodiazepines concurrently whenever possible</description>
    <loadArtifacts>    
        <resource>
            <path>../opioid-cds/resources/library-omtklogic-0-0-1.xml</path>
        </resource>
        <resource>
            <path>../opioid-cds/resources/library-omtkdata-0-0-2.xml</path>
        </resource>
        <resource>
            <path>../opioid-cds/resources/library-fhir-helpers.json</path>
        </resource>
        <resource>
            <path>../opioid-cds/resources/library-opioidcds-stu3-common-0-1-0.xml</path>
        </resource>
        <resource>
            <path>../opioid-cds/resources/library-opioidcds-stu3-rec-11-patient-view-0-1-0.xml</path>
        </resource>
        <resource>
            <path>../opioid-cds/resources/plandefinition-opioidcds-11-patient-view.xml</path>
        </resource>
        <bundle>src/test/resources/terminology/opioid-cds-terminology-bundle.json</bundle>
    </loadArtifacts>
    <test>
        <id>benzo-trigger-with-opioid</id>
        <cdsServiceId>opioidcds-11-patient-view</cdsServiceId>
        <requestJsonSource>
            <resource>
                <path>../opioid-cds/pages/requests/request-example-rec-11-patient-view-benzo-trigger-with-opioid.json</path>
            </resource>
        </requestJsonSource>
        <expectedResponseJsonSource>
            <resource>
                <path>../opioid-cds/pages/responses/response-example-rec-11-patient-view-benzo-trigger-with-opioid.json</path>
            </resource>
        </expectedResponseJsonSource>
    </test>
    <test>
        <id>benzo-trigger-without-opioid</id>
        <cdsServiceId>opioidcds-11-patient-view</cdsServiceId>
        <requestJsonSource>
            <resource>
                <path>../opioid-cds/pages/requests/request-example-rec-11-patient-view-benzo-trigger-without-opioid.json</path>
            </resource>
        </requestJsonSource>
        <expectedResponseJsonSource>
            <resource>
                <path>../opioid-cds/pages/responses/response-example-rec-11-patient-view-benzo-trigger-without-opioid.json</path>
            </resource>
        </expectedResponseJsonSource>
    </test>
    <test>
        <id>opioid-trigger-with-benzo</id>
        <cdsServiceId>opioidcds-11-patient-view</cdsServiceId>
        <requestJsonSource>
            <resource>
                <path>../opioid-cds/pages/requests/request-example-rec-11-patient-view-opioid-trigger-with-benzo.json</path>
            </resource>
        </requestJsonSource>
        <expectedResponseJsonSource>
            <resource>
                <path>../opioid-cds/pages/responses/response-example-rec-11-patient-view-opioid-trigger-with-benzo.json</path>
            </resource>
        </expectedResponseJsonSource>
    </test>
    <test>
        <id>opioid-trigger-without-benzo</id>
        <cdsServiceId>opioidcds-11-patient-view</cdsServiceId>
        <requestJsonSource>
            <resource>
                <path>../opioid-cds/pages/requests/request-example-rec-11-patient-view-opioid-trigger-without-benzo.json</path>
            </resource>
        </requestJsonSource>
        <expectedResponseJsonSource>
            <resource>
                <path>../opioid-cds/pages/responses/response-example-rec-11-patient-view-opioid-trigger-without-benzo.json</path>
            </resource>
        </expectedResponseJsonSource>
    </test>
</CDSHooksTestScript>